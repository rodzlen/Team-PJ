<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.title %></title>
    <link rel="stylesheet" href="/css/qna_style.css"> <!-- CSS 파일 임포트 -->
</head>

<aside>
    <h3>카테고리</h3>
    <ul>
        <li><a href="/notice">공지사항</a></li>
        <li><a href="/qna">QnA</a></li>
        <li><a href="/freeboard">자유게시판</a></li>
    </ul>
</aside>



<div >
    <h3>QnA</h3>
    <table >
        <thead>
            <tr>
                <th>번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>작성일</th>
            </tr>
        </thead>
        <tbody>
            <% qnaboard.forEach((qnaboard) => { %>
            <tr>
                <td><%= qnaboard.id %></td>
                <td ><a href="/qna/<%= qnaboard.id %>"><%= qnaboard.title %></a></td>
                <td><%= qnaboard.createBy %></td>
                <td><%= qnaboard.post_date %></td>
            </tr>
            <button onclick="location.href='qna/add'">글쓰기</button>
            <% }) %>
            <form action="/qna" method="GET">
                <input type="text" name="search" placeholder="검색">
                <select name="type">
                  <option value="title">제목</option>
                  <option value="writer">작성자</option>
                  <option value="title||writer" default="default">제목+작성자</option>
                </select>
                <button type="submit">검색</button>
              </form>
        </tbody>
    </table>
</div>