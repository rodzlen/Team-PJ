<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= locals.title %>
    </title>
    <link rel="stylesheet" href="/css/qna_style.css"> <!-- CSS 파일 임포트 -->
</head>

<body>
    <div id="cover">
        <aside class="category-menu">
            <h3>카테고리</h3>
            <ul>
                <li><a href="/notice">공지사항</a></li>
                <li><a href="/qna">QnA</a></li>
                <li><a href="/freeboard">자유게시판</a></li>
            </ul>
        </aside>

            <h3>QnA</h3>
            <table>
                <thead>
                    <tr>
                        <th>번호</th>
                        <th>제목</th>
                        <th>작성자</th>
                        <th>작성일</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach((question,index)=> { %>
                        <tr>
                            <td>
                                <%= index +1 %>
                            </td>
                            <td><a href="/qna/detail/<%= question.question_id %>">
                                    <%= question.question_title %>
                                </a></td>
                            <td>
                                <%= question.question_by %>
                            </td>
                            <td>
                                <%= question.question_date %>
                            </td>
                        </tr>

                        <% }) %>
                            <button onclick="location.href='qna/ask'">글쓰기</button>
                            <form action="/qna" method="GET">
                                <input type="text" name="search" placeholder="검색">
                                <select name="type">
                                    <option value="title">제목</option>
                                    <option value="create_By">작성자</option>
                                    <option value="title||create_By" default="default">제목+작성자</option>
                                </select>
                                <button type="submit">검색</button>
                            </form>
                </tbody>
            </table>

    </div>
</body>