<!-- views/dashboard/admin/adminpostlist.ejs -->

<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>게시물 리스트 - 유저</title>
    <link rel="stylesheet" href="/css/postlist.css" />
  </head>
  <body>
    <div id="content">
      <div class="admin-title">
        <h2>종일반 - 유저</h2>
      </div>
      <div class="search-form">
        <form action="/admin/admin_alldayClassPosts" method="GET">
          <input type="text" name="search" value="<%= searchQuery %>" placeholder="검색">
          <button type="submit">검색</button>
        </form>
          <input type="submit" value="검색" class="btn" />
        </form>
      </div>
      <ul class="admin-posts">
        <% data.forEach(post => { %>
        <li>
            <a href="/user/userdashboard/<%= post._id %>">
                <%=  post.pet_name %>
            </a>
            
        </li>
        <% }) %>
      </ul>

      
    <script src="/js/main.js"></script>
  </body>
</html>

