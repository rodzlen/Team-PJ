<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= locals.title %>
  </title>
  <link rel="stylesheet" href="/css/freeboardEdit_style.css"> <!-- CSS 파일 임포트 -->
</head>
<div id="edit">
  <h3>
    <%= locals.title%>
  </h3>
  <div id="cover">
    <form action="/freeboard/edit/<%= data.id %>" method="POST" enctype="multipart/form-data">
      <input type="text" name="title" placeholder="<%= data.title %>">&nbsp;
      <input type="file" name="Image" placeholder="<%= data.Image %>"><br>
      <textarea name="content"><%= data.content %></textarea><br>
      
      <button type="submit">수정</button>

    </form>
    <button onclick="location.href='/freeboard/detail/<%= data.id %>'"></button>
    <!-- <a href="/freeboard/detail/<%= data.id %>">뒤로가기</a> -->
    <form action="/freeboard/delete/<%= data.id %>" method="POST" onsubmit="return confirm('정말 삭제하시겠습니까?');">
      <button id="delBtn" type="submit">삭제</button>
    </form>
  </div>
</div>