<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.title %></title>
    <link rel="stylesheet" href="/css/freeboard_style.css"> <!-- CSS 파일 임포트 -->
  </head>

<aside>
    <h3>카테고리</h3>
    <ul>
        <li><a href="/notice">공지사항</a></li>
        <li><a href="/qna">QnA</a></li>
        <li><a href="/freeboard">자유게시판</a></li>
    </ul>
</aside>

<div>
    <h3><%= locals.title></h3>
    <table >
        <thead>
            <tr>
                <th>번호</th>
                <th>제목</th>
                <th>작성일</th>
            </tr>
        </thead>
        <tbody>
            <% FreeBoard.forEach((FreeBoard, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><a href="/freeboard/<%= freeboard.id %>"><%= FreeBoard.title %></a></td>
                <td><%= FreeBoard.date %></td>
            </tr>
            <% }) %>
            <form action="/freeborad" method="GET" >
                <input type="text" name="search" placeholder="검색">
                <select name="type">
                  <option value="title">제목</option>
                  <option value="writer">작성자</option>
                  <option value="title||writer" default="default">제목+작성자</option>
                </select>
                <button type="submit">검색</button>
              </form>
        </tbody>
    </table>
</div>